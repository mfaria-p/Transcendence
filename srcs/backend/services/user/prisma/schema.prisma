// prisma/schema.prisma

generator client {
  provider = "prisma-client"
  output = "../src/generated/prisma"
  moduleFormat = "esm"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum FriendRequestStatus {
  PENDING
  ACCEPTED
  DECLINED
  CANCELED
}

model Profile {
  id            String   @id
  avatarUrl     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  friendshipsA  Friendship[]    @relation("FriendshipsA")
  friendshipsB  Friendship[]    @relation("FriendshipsB")

  sentRequests  FriendRequest[] @relation("SentRequests")
  recvRequests  FriendRequest[] @relation("RecvRequests")
}

model FriendRequest {
  id            String               @id @default(cuid())
  fromProfileId String
  toProfileId   String
  status        FriendRequestStatus  @default(PENDING)
  message       String?
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt

  fromProfile   Profile @relation("SentRequests", fields: [fromProfileId], references: [id], onDelete: Cascade)
  toProfile     Profile @relation("RecvRequests", fields: [toProfileId], references: [id], onDelete: Cascade)

  @@unique([fromProfileId, toProfileId])
  @@index([toProfileId, status])
  @@index([fromProfileId, status])
}

model Friendship {
  id          String   @id @default(cuid())
  profileAId  String
  profileBId  String
  createdAt   DateTime @default(now())

  // profileAId < profileBId
  profileA     Profile @relation("FriendshipsA", fields: [profileAId], references: [id], onDelete: Cascade)
  profileB     Profile @relation("FriendshipsB", fields: [profileBId], references: [id], onDelete: Cascade)

  @@unique([profileAId, profileBId])
  @@index([createdAt])
}
